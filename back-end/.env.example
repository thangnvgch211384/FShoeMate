# ============================================
# FShoeMate Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# ============================================
# Server Configuration
# ============================================
PORT=4000

# ============================================
# Database Configuration
# ============================================
# MongoDB connection string
# Format: mongodb://[username:password@]host[:port][/database]
MONGO_URI=mongodb://localhost:27017/fshoemate

# ============================================
# JWT Authentication
# ============================================
# Secret key for JWT token signing (use a strong random string)
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
# Token expiration time (default: 7d)
# Examples: 1h, 24h, 7d, 30d, 1y
JWT_EXPIRES_IN=7d

# ============================================
# Frontend URL
# ============================================
# Used for email links and redirects
FRONTEND_URL=http://localhost:8080

# ============================================
# Email Configuration (Optional)
# ============================================
# Required for: Password reset, Order confirmations, Email notifications
# For Gmail: Use App Password (not your regular password)
# Setup guide: See EMAIL_SETUP.md
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here

# ============================================
# PayOS Payment Gateway (Optional)
# ============================================
# Required for: Online payment integration
# Setup guide: See PAYOS_SETUP.md
PAYOS_CLIENT_ID=your_payos_client_id
PAYOS_API_KEY=your_payos_api_key
PAYOS_CHECKSUM_KEY=your_payos_checksum_key
